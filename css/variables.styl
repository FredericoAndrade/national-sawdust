/*To auto-compile Stylus and auto-prefixer Nib, run stylus -u nib -w from parent folder*/
@import 'nib'
@import 'fonts'

$padding = 1.1em
$shadow-1 = 0 1px 2px rgba(0,0,0,0.1)
$shadow-2 = 0 2px 4px rgba(0,0,0,0.2)
$time = 0.1s ease-in-out
$black = 900 'black', sans-serif
$bold = 700 'bold', sans-serif
$medium = 100 'medium', serif

buy-link()
  float right
  padding $padding
  // border-radius 5px
  transition background $time, color $time, border-bottom-color $time
  border 1px solid rgba(0,0,0,.1)
  box-shadow $shadow-1
  font('bold', 1em, initial)

  &:hover
    color white
    background #2D98F6
    background rgba(0,0,0,0.7)
    // border-bottom-color darken(#2D98F6, 20%)
    box-shadow $shadow-1

  &:active
    // background darken(#2D98F6, 10%)
    border-bottom 0

font(weight, size, height)
  // Note on letter-spacing: Photoshop tracking is based on 1/1000em
  letter-spacing -0.03em
  font-family weight
  font-size size
  line-height height

event-link()
  box-sizing border-box

  &.event-link
    height 100%
    width 100%
    padding 1.3em
    opacity .8
    display inline-block
    transition opacity $time

    &:hover
      opacity 1

    h1
      margin 0
      text-transform capitalize
      font('black', 6vw, 1em)
      text-overflow ellipsis
      overflow hidden
      height 100%

    p
      font-weight bold
      position absolute
      bottom 1em
      margin 0 0 12px 0
      font('bold', 1.8vw, 1.5em)

  &.buy-link
    buy-link()
    display block
    position absolute
    bottom 1em
    right 1em