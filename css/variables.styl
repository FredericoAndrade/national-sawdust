/*To auto-compile Stylus and auto-prefixer Nib, run stylus -u nib -w from parent folder*/
@import 'nib'
@import 'fonts'

$padding = 1.1em
$shadow-1 = 0 1px 2px rgba(0,0,0,0.1)
$shadow-2 = 0 2px 4px rgba(0,0,0,0.2)
$time = 0.1s
$black = 900 'black', sans-serif
$bold = 700 'bold', sans-serif
$medium = 100 'medium', serif

buy-link()
  float right
  padding $padding
  border-radius 5px
  transition background $time ease-in-out, color $time ease-in-out, border-bottom-color $time ease-in-out
  border 1px solid #f7f7f7
  box-shadow $shadow-1
  font('bold', 1em, initial)

  &:hover
    color white
    background #2D98F6
    border-bottom-color darken(#2D98F6, 20%)
    box-shadow $shadow-1

  &:active
    background darken(#2D98F6, 10%)
    border-bottom 0

font(weight, size, height)
  font-family weight
  word-spacing 0.03em
  font-size size
  line-height 1em