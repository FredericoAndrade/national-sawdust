/*To auto-compile Stylus and auto-prefixer Nib, run stylus -u nib -w from parent folder*/
@import 'variables'

.single
  .content-wrap
    float left
    width 100%

    .main
      margin auto
      display table
      margin-top 4em

      .event
        .title
          float left
          width 66.66%
          margin 0
          font("bold", 5vw, 1.1em)

          span
            clear both
            display block

        ul.categories
          width 100%
          margin-top 1em
          display inline-block

          li
            float left
            display inline-block

            a
              color $link-color
              display block
              padding 1em
              opacity .8
              font('medium', 1.4em, 1em)
              transition opacity $time

              &:hover
                opacity 1

        .buy-links
          display inline-block
          float right
          .buy-link
            buy-link()
            font("bold", 2vw,initial)

          .members-link
            buy-link()
            font("bold", 2vw,initial)

    .archive
      height 200px
      width 100%
      display none
      float left
      background #BCB6DE
      margin 3em -3em
      padding 0 3em

      h2
        margin 0
        text-align center
        font('bold', 2em, 200px)
